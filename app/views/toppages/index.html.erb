 <% if logged_in? %>
 <h1>タイムライン</h1>
        <%=render 'records/records',records: @records %>
        <div class="">
          <%= link_to 'ログアウト',logout_path,method: :delete %>
        </div>
 <% else %>
  <div class="text-center">
    <div class="container">
      <div class="main-title">
        <h1>ツリロク</h1>
        <h3>Dream of Big Fish!<h3>
        <p>このアプリはあなたの釣果を記録できるアプリです。</p>
      </div>
    </div>
      <div class="signup-button">
        <%= link_to '新規ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
        <p>すでにユーザーの方は<%=link_to 'ログイン',login_path%></p>
      </div>
  </div>
<% end %>

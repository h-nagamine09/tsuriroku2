<!-- 釣果投稿フォーム -->
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_for(@record) do |f| %>

    <div class="form-group">
      <%= f.label :name, :name, class: 'control-label' %>
      <%= f.select :name, ["ブラックバス","シーバス",'ライギョ','ナマズ','鯉','その他'], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :size, :size %>
      <%= f.select :size,[1..200], class: 'custom-select' %>
    </div>
    <div class="form-group">
      <%= f.label :weight, :weight%>
      <%= f.text_area :weight, class: 'form-control' %>
    <div class="form-group">
      <%= f.label :place, :place %>
      <%= f.text_area :place, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :lure, :lure %>
      <%= f.text_area :lure, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :weather, :weather %>
      <%= f.select :weather,["晴れ","曇り","雨","雪"], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :posted_at, :posted_at %>
      <%= f.datetime_select :posted_at, start_year: 2000, end_year: Time.current.year + 1,
           use_month_numbers: true %>
    </div>
    <div class="form-group">
       <%= f.label :image, :image %>
       <%= f.file_field :image, class: 'form-control-file' %>
    </div>


       <%=f.submit '投稿', class: 'btn btn-primary btn-block' %>
       <% end %>
    </div>
   </div>
</div>
